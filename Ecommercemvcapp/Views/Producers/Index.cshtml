@model IEnumerable<Ecommercemvcapp.Models.Producer>
@{
    ViewBag.Title = "List of producers";
}
<div class="row">
        <div class="col-md-8 offset-md-2 ">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>              
                        <th>@Html.DisplayNameFor(model =>model.ProfileImageUrl)</th>
                         <th>@Html.DisplayNameFor(model =>model.FullName)</th>
                          <th>@Html.DisplayNameFor(model =>model.Biografy)</th>
                            @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                 <th>Actions</th>
                            }
                   
                    </tr>
                </thead>
                <tbody >
                  @foreach(var item in Model)
                {
                    <tr style="width:50px">
                        <td class="align-middle">
                            <img class="card" src="@item.ProfileImageUrl" alt="@item.FullName" style="width:100px"> 
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Biografy)
                        </td>
                         @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                 <td class="align-middle">
                                <a class="btn btn-primary"asp-controller="Producers" asp-action="Edit" asp-route-id=@item.Id><i class="bi bi-pencil"></i>Edit</a>
                                <a class="btn btn-info"asp-controller="Producers" asp-action="Details" asp-route-id=@item.Id><i class="bi bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger"asp-controller="Producers" asp-action="Delete" asp-route-id=@item.Id><i class="bi bi-trash3"></i>Delete</a>
                            </td>
                            }
                       
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </div>
     @await Html.PartialAsync("_Createitem","Producers")