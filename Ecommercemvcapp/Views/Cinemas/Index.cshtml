@model IEnumerable<Ecommercemvcapp.Models.Cinema>
@{
    ViewBag.Title = "List of cinemas";
}
<div class="row">
        <div class="col-md-8 offset-2">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model =>model.Logo)</th>
                         <th>@Html.DisplayNameFor(model =>model.Name)</th>
                          <th>@Html.DisplayNameFor(model =>model.Discription)</th>
                          @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                 <th>Actions</th>
                            }
                   
                    </tr>
                </thead>
                <tbody>
                  @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="card" src="@item.Logo" alt="@item.Name" style="width:100px"> 
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Discription)
                        </td>
                         @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                 <td class="align-middle">
                                <a class="btn btn-primary" asp-controller="Cinemas" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i>Edit</a>
                                <a class="btn btn-info"  asp-controller="Cinemas" asp-action="Details"  asp-route-id="@item.Id"><i class="bi bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger"  asp-controller="Cinemas" asp-action="Delete"  asp-route-id="@item.Id"><i class="bi bi-trash3"></i>Delete</a>
                            </td>
                            }
                       
                    </tr>
                }
            </tbody>
            </table>
              
        </div>
    </div>
     @await Html.PartialAsync("_Createitem","Cinemas")